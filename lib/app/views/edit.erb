<div class="container">
  <div class="span3 col-centered">
    <h1 id="edit-header">Edit Your Idea</h1>

    <form action="/<%= idea.id %>" method="POST" role="form">
      <input type="hidden" name="_method" value="PUT" />
      <div class="form-group">
        <label for="edit-title">Title:</label>
        <input id="edit-title" type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
      </div>
      <div class="form-group">
        <label for="edit-desc">Description:</label>
        <textarea name='idea[description]'><%= idea.description %></textarea><br/>
      </div>
      <div class="form-group">
        <label for="edit-tags">Tags:</label>
        <textarea name='idea[tags]'><%= idea.tags.join(", ") %></textarea><br/>
      </div>
      <input type='submit' class='btn btn-default'/>
    </form>
  </div>
</div>
